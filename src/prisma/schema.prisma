datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

model User {
  id        String   @id @unique
  username  String
  is_online Boolean  @default(false)
  last_ping DateTime @default(now())

  userChannels UserChannel[]
  messages     Message[]
}

model Room {
  name String      @id @unique
  type ChannelType

  userChannels UserChannel[]
  messages     Message[]
}

model UserChannel {
  user_id String
  room    String

  user    User @relation(fields: [user_id], references: [id])
  channel Room @relation(fields: [room], references: [name])

  @@id([user_id, room])
}

model Message {
  id         BigInt   @id @default(autoincrement())
  from_user  String
  room       String
  content    String
  created_at DateTime @default(now())

  user    User @relation(fields: [from_user], references: [id])
  channel Room @relation(fields: [room], references: [name])
}

enum ChannelType {
  PUBLIC
  PRIVATE
}
